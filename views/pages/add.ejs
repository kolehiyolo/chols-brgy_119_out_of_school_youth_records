<!DOCTYPE html>
<html lang="en" dir="ltr">

<%- include("../partials/head"); -%>

<body>
  <!-- * Header -->
  <%- include("../partials/header"); -%>

  <!-- * Main -->
  <main class="main main-add">
    <h1>Add person</h1>
    <form class="" action="/add" method="post">
      <div class="form-group">
        <div class="name">
          <h2>Name</h2>
          <label>Last Name</label>
          <input class="form-control" type="text" name="nameLast">
          <label>First Name</label>
          <input class="form-control" type="text" name="nameFirst">
          <label>Middle Name</label>
          <input class="form-control" type="text" name="nameMiddle">
          <label>Nickname</label>
          <input class="form-control" type="text" name="nameNickname">
          <label>Suffix</label>
          <input class="form-control" type="text" name="nameSuffix">
        </div>
        <div>
          <h2>Others</h2>
          <label>Birthdate</label>
          <input class="form-control" type="date" name="birthdate">
          <label>Age</label>
          <input class="form-control" type="number" name="age">
          <label>Gender</label>
          <input class="form-control" type="text" name="gender">
        </div>
        <div class="legalGuardian">
          <h2>Legal Guardian</h2>
          <label>Last Name</label>
          <input class="form-control" type="text" name="legalNameLast">
          <label>First Name</label>
          <input class="form-control" type="text" name="legalNameFirst">
          <label>Middle Name</label>
          <input class="form-control" type="text" name="legalNameMiddle">
          <label>Nickname</label>
          <input class="form-control" type="text" name="legalNameNickname">
          <label>Suffix</label>
          <input class="form-control" type="text" name="legalNameSuffix">
        </div>
        <!-- <label>Post</label>
      <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea> -->
      </div>
      <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </form>
  </main>

  <!-- * Footer -->
  <%- include("../partials/footer"); -%>
</body>

</html>