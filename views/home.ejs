    <!-- -* People Looping Generation -->
    <div class="people-list-container">
      <ul class="people-list list-group">
        <% persons.forEach(function(person){ %>
        <a class="person-<%=person._id%> list-group-item list-group-item-action">
          <div class="general">
            <p class="name"><%=person.name.last%>, <%=person.name.first%> <%=person.name.middle%> <%=person.name.suffix%></p>
            <p class="birthdate"><%=person.birthdate%></p>
            <p class="age"><%=person.age%></p>
            <p class="gender"><%=person.gender%></p>
            <!-- <a href="/posts/<%=person._id%>">Read More</a> -->
          </div>
          <div class="responsibility">
            <p class="legal-guardian"><%=person.legalGuardian.last%>, <%=person.legalGuardian.first%> <%=person.legalGuardian.middle%> <%=person.legalGuardian.suffix%></p>
            <p class="legal-guardian-contact"><%=person.legalGuardianContact%></p>
          </div>
          <div class="academic"></div>
        </a>
        <% }) %>
      </ul>
    </div>
  </main>

